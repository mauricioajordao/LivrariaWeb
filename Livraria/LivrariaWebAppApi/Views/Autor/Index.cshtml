@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/App/Autor/AutorController.js"></script>


<div ng-controller="AutorController">
    <div id="ListaAutores>">
        <h2 style="align-content: center">Lista de Autores </h2>
        <div ng-init="ObterTodos()"></div>
        <br />
        <a ng-click="CriaAutor()" class="btn btn-primary btn-xs">Novo Autor</a>
        <br />
        <br />
        <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>

                <th> <a href="#" ng-click="OrdenaAutores('Codigo')">Codigo</a></th>
                <th> <a href="#" ng-click="OrdenaAutores('Nome')">Nome</a></th>
                </thead>
                <tbody>
                    <tr dir-paginate="item in ListOfEmployee|itemsPerPage:5">
                        <td>{{item.Codigo}}</td>
                        <td>{{item.Nome}}</td>
                        <td>
                            <button class="glyphicon glyphicon-pencil btn btn-primary btn-xs" onclick="$scope.AlterarAutor()" ng-click="$scope.AlterarAutor()">
                            </button>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-xs" href="#/delete/{{item.Codigo}}">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div style="align-content:flex-end ; align-self:flex-end"></div>
            <dir-pagination-controls style="align-content:flex-end" max-size="5" boundary-links="true"></dir-pagination-controls>
        </div>
        </div>

    </div>

</div>


<div id="NovoAutor" tabindex="-1" role="dialog" class="modal fade" align="center" aria-labelledby="add-modal-label">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="add-modal-label">Criar Autor</h4>
            </div>

            <form class="form-horizontal" role="form" id="add-form" ng-submit="AdicionaNovoAutor()">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="add-firstname" name="firstname" placeholder="Nome" ng-model="Nome" required>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="AlteraAutor" tabindex="-1" role="dialog" class="modal fade" align="center" aria-labelledby="add-modal-label">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="add-modal-label">Criar Autor</h4>
            </div>

            <form class="form-horizontal" role="form" id="update-form" ng-submit="AlteraAutor()">
                <div class="modal-body">
                    <label for="add-firstname" class="col-sm-2 control-label">Código</label>
                    <div class="col-sm-10">
                        <input type="text" disabled="disabled"  class="form-control" id="add-firstname" name="firstname" placeholder="Código" ng-model="Codigo" required>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="add-firstname" name="firstname" placeholder="Nome" ng-model="Nome" required>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="excluirAutor" tabindex="-1" role="dialog" class="modal fade" align="center" aria-labelledby="add-modal-label">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="add-modal-label">Criar Autor</h4>
            </div>

            <form class="form-horizontal" role="form" id="update-form" ng-submit="AlteraAutor()">
                <div class="modal-body">
                    <label for="add-firstname" class="col-sm-2 control-label">Código</label>
                    <div class="col-sm-10">
                        <input type="text" disabled="disabled" class="form-control" id="add-firstname" name="firstname" placeholder="Código" ng-model="Codigo" required>
                    </div>

                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="add-firstname" name="firstname" placeholder="Nome" ng-model="Nome" required>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

