@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/multi-select.css" rel="stylesheet" />
}


<link href="css/multi-select.css" media="screen" rel="stylesheet" type="text/css" />
<script src="~/App/Livro/LivroController.js"></script>


<div id="telalivros" ng-controller="LivroController" ng-cloak style="display:none">
    <div id="ListaLivros>">
        <h2 style="align-content: center">Lista de Livros </h2>
        <div ng-init="ObterTodos()"></div>
        <br />
        <table style="border:none">
            <tr style="border:none">
                <td style="align-items:flex-start;border:none" width="5%">
                    <a href="#" ng-click="CriaLivro()" class="btn btn-primary glyphicon glyphicon-play   btn-xs">Novo</a>
                </td>
                <td width="90%" style="align-items:flex-start;border:none"></td>
                <td style="align-items:flex-end;border:none" width="5%">
                    <a href="Livro/Report" class="btn btn-primary btn-xs glyphicon glyphicon-print glyphicon-align-right">Relatorio</a>
                </td>
            </tr>



        </table>
        <br />
        <br />
        <div class="table-responsive">
            <form class="form-inline">
                <div class="form-group">
                    <label>Procurar</label>
                    <input type="text" ng-model="procurar" class="form-control" placeholder="Procurar...">
                </div>
            </form>
            <br />
            <table id="mytable" class="table table-bordred table-striped" ng-cloak>
                <tr>
                    <td width="5%"> <a href="#" ng-click="OrdenaLivroes('Codigo')">Codigo</a></td>
                    <td width="25%"> <a href="#" ng-click="OrdenaLivroes('Titulo')">Titulo</a></td>
                    <td width="15%"> <span>Editora</span></td>
                    <td width="5%"> <span>Edicão</span></td>
                    <td width="5%"> <span>Ano</span></td>
                    <td width="5%"> <span>Preço </span></td>
                    <td width="17%"> <span>Autores</span></td>
                    <td width="17%"> <span>Assuntos</span></td>
                    <td width="3%"> </td>
                    <td width="3%"></td>
                </tr>
                <tbody>
                    <tr dir-paginate="item in ListaLivros|itemsPerPage:7|filter:procurar">
                        <td width="5%" align="right">{{item.codL}}</td>
                        <td width="25%">{{item.titulo}}</td>
                        <td width="15%">{{item.editora}}</td>
                        <td width="5%" align="center">{{item.edicao}}</td>
                        <td width="5%" align="center">{{item.anopublicao }}</td>
                        <td width="5%" align="right">{{item.preco}}</td>
                        <td width="17%"><textarea style="font-size:8px;width:95%;height:95%" readonly rows="2">{{item.autoresTXT}}</textarea></td>
                        <td width="17%"><textarea style="font-size:8px;width:95%;height:95%" readonly rows="2">{{item.assuntosTXT}}</textarea></td>


                        <td widh="3%">
                            <button id="{{item.codL}}" class="glyphicon glyphicon-pencil btn btn-danger btn-xs" onclick='exibirBoxAlteraItem(angular, this.id )'>
                            </button>
                        </td>
                        <td widh="3%">
                            <button id="{{item.codL}}" class="glyphicon glyphicon-trash btn btn-danger btn-xs" onclick='deletaitem(angular, this.id )'>
                            </button>

                        </td>
                    </tr>
                </tbody>
            </table>
            <script>
                function deletaitem(angular, item) {
                    var confirma = confirm("excluir Item ?")
                    if (confirma = true) {
                        var elemento = document.getElementById('mytable');
                        var $scope = angular.element(elemento).scope();
                        $scope.DeleteLivro(item);
                    }
                };
                function exibirBoxAlteraItem(Angular, Codigo) {
                    var elemento = document.getElementById('mytable');
                    var $scope = angular.element(elemento).scope();
                    $scope.AlteraLivro(Codigo);


                };
            </script>
            <div style="align-content:flex-end ; align-self:flex-end"></div>
            <dir-pagination-controls style="align-content:flex-end" max-size="5" boundary-links="true"></dir-pagination-controls>
        </div>
    </div>

</div>



<div id="NovoLivro" tabindex="-1" role="dialog" class="modal fade" align="center" aria-labelledby="add-modal-label">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="add-modal-label">Criar Livro</h4>
            </div>

            <form class="form-horizontal" role="form" id="add-form" ng-submit="AdicionaNovoLivro()">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Titulo</label>
                        <div class="col-sm-3">
                            <input width="60" type="text" class="form-control" id="titulo" ng-model="LivroData.Titulo" required>
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Editora</label>
                        <div class="col-sm-3">
                            <input type="text" width="45" class="form-control" id="editora" ng-model="LivroData.Editora" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Edição</label>
                        <div class="col-sm-3">
                            <input type="number" min="0" max="10" width="3" class="form-control" id="Edicao" ng-model="LivroData.Edicao" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Publicação</label>
                        <div class="col-sm-3">
                            <input type="number" value="2020" min="1900" max="2020" width="5" class="form-control" id="publicacao" ng-model="LivroData.anopublicao" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Preço</label>
                        <div class="col-sm-3">
                            <input type="text" width="10" class="form-control" id="preco" ng-model="LivroData.preco">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Assuntos</label>
                        <div id="divassuntos" class="col-sm-3">
                            <select id="selectassuntos" multiple='multiple'>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-2 control-label">Assuntos</label>
                        <div id="divautores" class="col-sm-3">
                            <select id="selectautores" multiple='multiple'>
                            </select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="AlteraLivro" tabindex="-1" role="dialog" class="modal fade" align="center" aria-labelledby="add-modal-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="add-modal-label">Alterar Livro</h4>
            </div>

            <form class="form-horizontal" role="form" id="update-form" ng-submit="AlteraDadosLivro()">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="add-codigo" class="col-sm-3 control-label">Código</label>
                        <div class="col-sm-1">
                            <input id="inputcodigo" type="text" width="30" disabled="disabled" class="form-control" style="align-self:self-start; width:50px;" ng-model="LivroData.Codigo" required>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label for="add-firstname" class="col-sm-3 control-label">Nome</label>
                        <div class="col-sm-5">
                            <input id="inputnome" type="text" width="80" style="width: 300px;" class="form-control" ng-model="LivroData.Nome" required>
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.tinysort.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.quicksearch.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.multi-select.js" type="text/javascript"></script>
<script src="~/Scripts/rainbow.js" type="text/javascript"></script>
<script src="~/Scripts/application.js" type="text/javascript"></script>
<script src="~/Scripts/handlebars.js" type="text/javascript"></script>
<script src="~/Scripts/github-api.js" type="text/javascript"></script>
<script src="~/Scripts/Jquery-MultiSelect.js"></script>




